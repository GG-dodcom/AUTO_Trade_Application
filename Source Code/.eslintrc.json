{
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [
		"next/core-web-vitals", // Next.js default ESLint config
		"plugin:@typescript-eslint/recommended" // TypeScript plugin
	],
	"rules": {
		"@typescript-eslint/no-unused-vars": "off", // Disable unused variables rule
		"@typescript-eslint/no-explicit-any": "off" // Disable no-explicit-any rule
		// Optionally downgrade to warnings instead of disabling:
		// "@typescript-eslint/no-unused-vars": "warn",
		// "@typescript-eslint/no-explicit-any": "warn"
	}
}
